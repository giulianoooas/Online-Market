@model ProiectAppWeb.Models.Review

@{
    ViewBag.Title = "Edit";
}

<br />
<div style="text-align:center">
    <h2>Editeaza Review-ul lasat produsului</h2>
</div>
<hr />

<br />
<br />
<br />


<div class="panel panel-default">
    <div class="panel-heading">
        <h3>
            Numele : @ViewBag.Produs.Titlu
        </h3>
    </div>
    <div class="panel-body" style="display:flex;
                    flex-direction:row;
                    justify-content:space-around ">
        <div style="padding-left:10%; padding-right:10%">
            <p>
                Descirere: @ViewBag.Produs.Descriere
            </p>
            <p>
                Pret: <b>@ViewBag.Produs.Pret</b><i class="glyphicon glyphicon-eur"></i>
            </p>
            <br />
            <i class="glyphicon glyphicon-globe"></i> @ViewBag.Produs.Categorie.Titlu
        </div>
        <div style="padding-left:10%; padding-right:10%">
            <img src="@ViewBag.Produs.urlPoza" style="border-radius:20%;width:60%" />
        </div>
    </div>
    <form class="panel-footer" method="post" action="/Produse/Sterge/@Model.ProdusId">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <a href="/Produse/Editeaza/@Model.ProdusId" class="btn btn-primary btn-sm">Editeaza</a>
        <button type="submit" class="btn-sm btn-primary">Sterge Produs</button>
    </form>
</div>

<form class="panel panel-group" method="post" action="/Review/Edit/@Model.ReviewId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.Label("Content", "Parere");<br />
    @Html.EditorFor(m => m.Content)
    <br />
    @Html.ValidationMessageFor(m => m.Content, null, new { @class="text-danger"})
    <br />
    <br />
    @Html.Label("Lasa si un rating produsului:")
    @Html.DropDownList("nrStars",
    new SelectList(ViewBag.lista, "Value", "Text"), new { @class = "form-control" })
    <br />
    <div class="panel-footer">
        <button class="btn-primary">Salveaza schimbarile</button>
    </div>
</form>
<br />
<br />
<a href="/Produse/Index" class="btn btn-primary">Vezi toate produsele</a>
<a href="/Produse/Afiseaza/@Model.ProdusId" class="btn btn-primary">Inapoi la produs</a>